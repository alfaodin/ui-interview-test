{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "frontend:dev": "cd apps/frontend && npm run dev",
    "frontend:test": "cd apps/frontend && npm run test",
    "frontend:start": "cd apps/frontend && npm run start",
    "frontend:build": "cd apps/frontend && npm run build",
    "backend:start": "cd apps/backend && npm run start:dev",
    "frontend:build:es": "cd apps/frontend && npm run build -- --configuration=es",
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run backend:start\" \"npm run frontend:dev\"",
    "build:all": "npm run backend:build && npm run frontend:build",
    "install:all": "cd apps/frontend && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
